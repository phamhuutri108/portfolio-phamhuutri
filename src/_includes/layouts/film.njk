---
layout: layouts/base.njk
---

<div class="page-section active-section">
    <h2 class="film-title">
        <span class="content-vi">{{ title_vi }}</span>
        <span class="content-en">{{ title_en }}</span>
    </h2>
    
    {# ========== FILM INFO ========== #}
    <!-- VIETNAMESE CONTENT -->
    <div class="content-vi" lang="vi">
        <p>
            <b>Thể loại:</b> {{ genre_vi }}<br>
            <b>Năm:</b> {{ year_vi }}<br>
            <b>Thời lượng:</b> {{ duration }}
        </p>

        {% if youtube_id %}
        <div class="video-embed">
            <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ youtube_id }}" title="{{ title_en }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        {% endif %}

        {% if logline_vi %}
        <h3>Logline</h3>
        <p>{{ logline_vi }}</p>
        {% endif %}

        {% if director_statement_vi and director_statement_vi.length > 0 %}
        <h3>Director's Statement</h3>
        {% for para in director_statement_vi %}
        <p>{{ para }}</p>
        {% endfor %}
        {% endif %}

        {% if crew_vi and crew_vi.length > 0 %}
        <h3>Crew</h3>
        <ul class="crew-list">
            {% for item in crew_vi %}
            <li><b>{{ item.role }}:</b> {{ item.name }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    </div>

    <!-- ENGLISH CONTENT -->
    <div class="content-en" lang="en">
        <p>
            <b>Genre:</b> {{ genre_en }}<br>
            <b>Year:</b> {{ year_en }}<br>
            <b>Duration:</b> {{ duration }}
        </p>

        {% if youtube_id %}
        <div class="video-embed">
            <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ youtube_id }}" title="{{ title_en }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        {% endif %}

        {% if logline_en %}
        <h3>Logline</h3>
        <p>{{ logline_en }}</p>
        {% endif %}

        {% if director_statement_en and director_statement_en.length > 0 %}
        <h3>Director's Statement</h3>
        {% for para in director_statement_en %}
        <p>{{ para }}</p>
        {% endfor %}
        {% endif %}

        {% if crew_en and crew_en.length > 0 %}
        <h3>Crew</h3>
        <ul class="crew-list">
            {% for item in crew_en %}
            <li><b>{{ item.role }}:</b> {{ item.name }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    </div>

    {# ========== ADDITIONAL CONTENT FROM MARKDOWN ========== #}
    {{ content | safe }}

    {# ========== CREW SLIDER ========== #}
    {% if crewData and crewData.length > 0 %}
    <div class="crew-scroller-container">
        <div class="crew-scroller">
            {% for member in crewData %}
            <div class="crew-card">
                <img 
                    src="{{ member.img }}" 
                    data-full="{{ member.img }}" 
                    data-name="{{ member.name }}" 
                    data-role-vi="{{ member.role_vi }}" 
                    data-role-en="{{ member.role_en }}"
                    alt="{{ member.name }}"
                    loading="lazy">
                <div class="crew-info">
                    <div class="crew-role">
                        <span class="content-vi">{{ member.role_vi }}</span>
                        <span class="content-en">{{ member.role_en }}</span>
                    </div>
                    <div class="crew-name">{{ member.name }}</div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    {# ========== BTS GALLERY WALL ========== #}
    {% if btsData and btsData.length > 0 %}
    <h3 style="margin-top: 50px;">
        <span class="content-vi">Hậu trường</span>
        <span class="content-en">Behind The Scene</span>
    </h3>
    <div class="gallery-wall">
        {% for pic in btsData %}
        <img src="{{ pic.src }}"{% if pic.class %} class="{{ pic.class }}"{% endif %} loading="lazy" alt="Behind the scene">
        {% endfor %}
    </div>
    {% endif %}
</div>
